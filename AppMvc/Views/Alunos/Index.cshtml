@model IEnumerable<AppMvc.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Gestão de Alunos</h2>

<p>
    @Html.ActionLink(linkText:"Create New",
                     actionName: "Create",
                     routeValues: "",
                     htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(expression: model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.CPF)
        </th>
        @*<th>
            @Html.DisplayNameFor(expression: model => model.DataMatricula)
        </th>*@
        <th>
            @Html.DisplayNameFor(expression: model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(expression: modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(expression: modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(expression: modelItem => item.CPF)
        </td>
        @*<td>
            @Html.DisplayFor(expression: modelItem => item.DataMatricula)
        </td>*@
        <td>
            @Html.DisplayFor(expression: modelItem => item.Ativo)
        </td>
        <td>

            @Html.ActionLink(linkText: "Editar",
                             actionName: "Edit",
                             routeValues: new { id = item.Id }, 
                             htmlAttributes: new {@class = "btn btn-warning"}) 

            @Html.ActionLink(linkText: "Detalhes",
                             actionName: "Details",
                             routeValues: new { id = item.Id }, 
                             htmlAttributes: new {@class = "btn btn-primary"}) 

            @Html.ActionLink(linkText: "Apagar",
                             actionName: "Delete",
                             routeValues: new { id = item.Id }, 
                             htmlAttributes: new {@class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
